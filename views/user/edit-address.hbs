<div class="container rounded bg-white mt-5 mb-5">
  <div class="row">
    <div class="p-3 col-md-7 centered mb-5">
          {{#each address}}
      <form action="/edit-address?id={{this.address.addressId}}" id="addAddressForm" method="post">
          {{/each}}
        <div class="my-2">
          <h3 class="text-dark p-3 text-center font-weight-bold">Add New Address</h3>
        </div>
        <div class="row mt-2 profile-view px-5">
        {{#if addressMsg}}
          <div
            class="alert alert-warning alert-dismissible fade show"
            role="alert"
          >
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
              <span class="sr-only">Close</span>
            </button>
            <strong>{{addressMsg}}</strong>
          </div>
          {{/if}}
          {{#each address}}
          <div class="form-check mb-3 mt-4 form-check-inline">
            <input
              type="radio"
              class="btn-check"
              name="addressType"
              value="Home"
              id="homeAddress"
              autocomplete="off"
              checked
            />
            <label
              class="btn btn-outline-dark btn-sm"
              for="homeAddress"
            >Home</label>

            <input
              type="radio"
              class="btn-check"
              name="addressType"
              value="Office"
              id="officeAddress"
              autocomplete="off"
            />
            <label
              class="btn btn-outline-dark btn-sm ms-3"
              for="officeAddress"
            >Office</label>
          </div>

          <div class="col-md-6"><label class="labels">Name</label><input
              type="text"
              name="name"
              class="form-control"
              value="{{this.address.name}}"
            /></div>
          <div class="col-md-6"><label class="labels">Mobile Number</label><input
              type="text"
              name="phone"
              id="phoneNumber"
              class="form-control"
              value="{{this.address.phone}}"
            /></div>
          <div class="col-md-6 mt-1"><label class="labels">Pincode</label><input
              type="text"
              name="pincode"
              id="pincode"
              class="form-control"
              value="{{this.address.pincode}}"
            /></div>
          <div class="col-md-6 mt-1"><label
              class="labels"
            >Locality</label><input
              type="text"
              name="locality"
              class="form-control"
              value="{{this.address.locality}}"
            /></div>
          <div class="col-md-12 mt-1"><label class="labels">House No./Building
              No.</label><input
              type="text"
              name="houseNumber"
              class="form-control"
              value="{{this.address.houseNumber}}"
            /></div>

          <div class="col-md-12 mt-1"><label class="labels">Area or Street
              Address</label><input
              type="text"
              name="streetAddress"
              class="form-control"
              value="{{this.address.streetAddress}}"
            /></div>

          <div class="col-md-6 mt-1"><label
              class="labels"
            >District/Town</label><input
              type="text"
              name="district"
              class="form-control"
              value="{{this.address.district}}"
            /></div>
          <div class="col-md-6 mt-1"><label class="labels">State</label><input
              type="text"
              name="state"
              class="form-control"
              value="{{this.address.state}}"
            /></div>
            {{/each}}
          <div class="col-md-12 text-center mt-4">
            <button
              class="btn btn-primary btn-lg"
              type="submit"
              style="font-size: 13px;"
            >Update Address</button>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>

<style>
